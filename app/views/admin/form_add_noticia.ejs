<!DOCTYPE html>
<html lang="pt-br">
<head>
  <title>Formulário de cadastro de Notícias</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container">
		<h1>Adicionar notícia</h1>
        <hr>
        <% if (validacao){%>
        <ul class="list-group">
			<% for (var i=0;i<validacao.length;i++){ %>
			<li class="list-group-item list-group-item-danger"><%= validacao[i].msg%></li>
		    <%}%>  
		
		</ul>
        <% } %>



		<form action="/noticias/salvar" method="post">
			<div class="form-group">
				<label for="titulo">Título:</label>
				<input type="text" class="form-control" id="titulo"  name="titulo" placeholder="Entre com título">
				
			</div>


            <div class="form-group">
				<label for="autor">autor:</label>
				<input type="text" class="form-control" id="autor"  name="autor" placeholder="Entre com autor">
				
			</div>


			<div class="form-group">
				<label for="data_noticia">Data da noticia:</label>
				<input type="date" class="form-control" id="data_noticia"  name="data_noticia" >
				
			</div>

			<div class="form-group">
				<label for="noticia">Notícia:</label>
  				<textarea class="form-control" id="noticia" rows="5" cols='30' name='noticia'></textarea>
			</div>
			
			<button type="submit" class="btn btn-primary">Enviar</button>
			</form>

	</div>	



	</body>
</html>